<%- include("partials/header.ejs")%>
<%- include("partials/homenavbar.ejs") %>

<body>
    
    <div class="container">
        <div class="jumbotron">
            <h1 class="display-4">Bem vindo</h1>
            <p class="lead">Esse é um blog do guia no programador.</p>
            <hr class="my-4">
            <p>Esse é um projeto feito durante o curso na Udemy</p>
            <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>
          </div>
          
        <% articles.forEach( article => { %>
           <div class="card">
            <div class="card-header">
                <h2><%= article.title %></h2>
            </div>
            <div class="card-body">
                <a href="/<%= article.slug %>" class="btn btn-success">Ler artigo</a>
            </div>
           </div>
        <% })%>

        <div class="row">
            <div class="col col-12">
                <a style="float: right;" href="/articles/page/2">Next >></a>
            </div>
        </div>

    </div>

</body>

